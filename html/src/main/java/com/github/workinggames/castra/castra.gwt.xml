<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.8.2//EN" "https://github.com/gwtproject/gwt/raw/2.8.2/distro-source/core/src/gwt-module.dtd">
<module rename-to='castra'>
    <inherits name='com.badlogic.gdx.backends.gdx_backends_gwt' />
    <inherits name='com.badlogic.gdx.ai' />

    <source path='core' />
    <source path='html' />

    <public path="resources" />

    <entry-point class='com.github.workinggames.castra.html.HtmlLauncher' />

    <!-- debug stuff, the user agent property speeds up the build process as it only compiles for the specified browser -->
    <!--
    <add-linker name="xsiframe" />
    <set-configuration-property name='xsiframe.failIfScriptTag' value='FALSE' />
    <set-configuration-property name="devModeRedirectEnabled" value="true" />
    <set-property name="compiler.useSourceMaps" value="true" />
    <set-property name="user.agent" value="safari" />
    -->
    <add-linker name="xsiframe" />
    <set-configuration-property name='xsiframe.failIfScriptTag' value='FALSE' />

    <set-property name="compiler.useSourceMaps" value="true" />
    <set-configuration-property name="devModeRedirectEnabled" value="true" />
    <set-property name="user.agent" value="safari" />

    <extend-configuration-property name="gdx.reflect.include" value="com.github.workinggames.castra.core.model.PlayerColorSchema" />
    <extend-configuration-property name="gdx.reflect.include" value="com.github.workinggames.castra.core.model.GameSpeed" />

    <!-- for debugging activate the property with the full path reference, otherwise the relative one -->
    <!--<set-configuration-property name="gdx.assetpath" value="C:\incub8\volkerivens\projects\castra\assets" />-->
    <set-configuration-property name="gdx.assetpath" value="assets" />

    <set-configuration-property name="gdx.assetoutputpath" value="html/target/webapp" />
</module>